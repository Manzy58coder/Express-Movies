html 
  head  
    title Movies 
    link(rel="stylesheet", href="./output.css")

  body(class="max-w-4xl mx-auto p-4") 
    h1(class="mt-16 text-5xl  font-bold") Movies
    div(class="mt-8 grid md:grid-cols-4 gap-4")
      each movie in data
        a(href=`/movies/${movies.id}`)
          img(src=`http://image.tmdb.org/t/p/w500${movie.poster_path}`, alt="")
          h2(class="text-lg")= movie.title
          p(class = "text-amber-700")=movie.vote_average
    