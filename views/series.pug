html 
  head  
    title series
    link(rel="stylesheet", href="/output.css")

  body(class="max-w-4xl mx-auto p-4") 
    h1(class="mt-16 text-5xl  font-bold") series
    div(class="mt-8 grid md:grid-cols-4 gap-4")
      each series in data
        a(href=`/series/${series.id}`)
          img(src=`http://image.tmdb.org/t/p/w500${series.poster_path}`, alt="")
          h2(class="text-lg")= series.name
          p(class = "text-amber-700")=series.vote_average
    